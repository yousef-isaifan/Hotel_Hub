<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_main_menu"
    tools:context=".Rooms">


    <TextView
        android:padding="8dp"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:background="@drawable/border_textview2"
        android:id="@+id/txtHotelDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textview"
        android:textColor="#00C7DA"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recRooms"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-16dp" />

    <TextView
        android:id="@+id/txtNoRooom"
        android:layout_width="380dp"
        android:layout_height="250dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="226dp"
        android:gravity="center"
        android:text="@string/no_rooms_available"
        android:textColor="@color/black"
        android:textSize="70dp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>