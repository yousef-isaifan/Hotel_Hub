<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_main_menu"
    tools:context=".Reserved_Rooms">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recReserved"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:gravity="center"
        android:id="@+id/txtNoRooom"
        android:layout_width="380dp"
        android:layout_height="250dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="226dp"
        android:text="@string/no_reserved_rooms"
        android:visibility="gone"
        android:textSize="70dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtNoRes"
        android:layout_width="380dp"
        android:layout_height="250dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="226dp"
        android:gravity="center"
        android:text="@string/no_reservations"
        android:textColor="@color/black"
        android:textSize="63dp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>